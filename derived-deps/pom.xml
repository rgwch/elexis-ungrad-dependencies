<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <artifactId>ungrad-dependencies</artifactId>
    <groupId>ch.rgw</groupId>
    <version>0.1.0.SNAPSHOT</version>
    <repositories>
      <repository>
        <id>maven.repo.alter</id>
        <name>Mvnrepository</name>
        <url>https://mvnrepository.com/</url>
      </repository>
      <repository>
          <id>central</id>
          <name>Central Repository</name>
          <url>http://repo.maven.apache.org/maven2/</url>
      </repository>
    </repositories>
    <pluginRepositories>
        <pluginRepository>
            <id>reficio</id>
            <url>http://repo.reficio.org/maven/</url>
        </pluginRepository>
    </pluginRepositories>


    <build>
        <plugins>
            <plugin>
                <groupId>org.reficio</groupId>
                <artifactId>p2-maven-plugin</artifactId>
                <version>1.2.0-SNAPSHOT</version>
                <executions>
                    <execution>
                        <id>default-cli</id>
                        <configuration>
                            <artifacts>
                                <!-- specify your depencies here -->
                                <!-- groupId:artifactId:version -->
                                <artifact>
                                    <id>io.vertx:vertx-core:3.2.1</id>
                                </artifact>
                                <artifact>
                                  <id>org.apache.servicemix.bundles:org.apache.servicemix.bundles.zxing:3.1.0_1</id>
                                </artifact>
                                <artifact>
                                  <id>
                                    xerces:xercesImpl:2.9.1
                                  </id>
                                </artifact>
                                <artifact>
                                  <id>org.odftoolkit:odfdom-java:0.8.6</id>
                                </artifact>
                                <artifact>
                                  <id>com.sun.jna:jna:3.0.9</id>
                                </artifact>
                                <artifact>
                                  <id>jfree:jfreechart-experimental:1.0.9</id>
                                </artifact>
                                <artifact>
                                    <id>junit:junit:4.12</id>
                                </artifact>
                                <artifact>
                                    <id>io.netty:netty-codec:4.1.1.Final</id>
                                </artifact>
                            </artifacts>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>


</project>
